{% extends "layouts/base.html.twig" %}

{% block title 'Edit User account' %}

{% block body %}

    <div class="row">
          <div class="col-md-6 mx-auto">
                    <h1 class="text-center my-5">Update Profile</h1>
                    {{ form_start(form) }}
                    <div class="row">
                              <div class="col-md-6">
                                        {{ form_row(form.firstName) }}
                              </div>

                              <div class="col-md-6">
                                        {{ form_row(form.lastName) }}
                              </div>
                    </div>
                    {{ form_rest(form) }}
                    <button type="submit" class="btn btn-primary btn-lg w-100 p-1">Apply changes</button> 
                    {{ form_end(form) }} 
          </div>

    </div>

{% endblock %}