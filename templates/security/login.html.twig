{% extends 'layouts/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-6 mx-auto">
                <form method="post">

                {% if error %}
                    <div class="alert alert-danger mb-3 rounded" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}


                <h1 class="h1 text-center mt-4 mb-3">Please sign in</h1>


                <p class="mb-4 text-center text-muted">Your pins are wainting for you</p>


                <div class="form-group mb-3">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>


                <div class="form-group mb-3">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                </div>

                
                
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">



                <div class="d-flex justify-content-between">
                <div class="form-check mb-3">
                        <label>
                            <input type="checkbox" class="form-check-input" name="_remember_me"> Remember me
                        </label>
                </div>
                <a href="{{ path('app_forgot_password_request') }}">Forgot password?</a>
                
                </div>
            



                <button class="btn btn-lg w-100 p-1 btn-primary" type="submit">
                    Sign in
                </button>

                <p class="mt-4 mb-0 text-center text-muted">Not registered yet! <a href="{{ path('app_register') }}">Create an account</a> </p>


            </form>
        </div>
    </div>


{% endblock %}
