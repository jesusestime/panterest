{% extends 'layouts/base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto ">


            <h1 class="text-center mt-3">Register</h1>
            <p class="mb-4 text-center text-muted">We need you to create your first pin !</p>

            {{ form_start(registrationForm) }}
                <div class="row  mb-3">

                    <div class="col-md-6">
                         {{ form_row(registrationForm.firstName) }}
                    </div>

                    <div class="col-md-6">
                         {{ form_row(registrationForm.lastName) }}
                    </div>

                </div>
                <div class="mb-3">
                    {{ form_row(registrationForm.email) }}
                </div>
                <div class="mb-3">
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                </div>
                <div class="mb-3">
                        {{ form_row(registrationForm.agreeTerms,{label :'I consent to the privacy policy and terms services'}) }}
                </div>

                <button type="submit" class="btn btn-primary  btn-lg w-100 p-1" >Register</button>
            {{ form_end(registrationForm) }}

            <p class='mt-3 text-muted mb-3 text-center'>
                Already have an account? <a href="{{ path('app_login') }}">Login in</a>
            </p>
    </div>
</div>
{% endblock %}
